
declare
n number;
m number;
r number;
s number:=0;
len number;
begin
n:=&n;
m:=n;
len:=length(to_char(n));
while n>0 loop
r:=mod(n,10);
s:=s+power(r,len);
n:=trunc(n/10);
end loop;
if m=s then
dbms_output.put_line('Amstrong number');
else
dbms_output.put_line('not amstrong number');
endÂ if;
end;
/
